@if (string.IsNullOrWhiteSpace(DisplayMessage) == false)
{
    var statusMessageClass = DisplayMessage.StartsWith("Error") ? "alert-error" : "alert-success";
    <div class="alert @statusMessageClass" role="alert">
        @DisplayMessage
    </div>
}

@code {
    [Parameter]
    public string? Message { get; set; }

    private string? DisplayMessage => Message;
}